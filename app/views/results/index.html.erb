<% if @results.present? %>
  <div> 
    <div class="flex flex-col justify-center items-center bg-white">
      <div class="relative overflow-x-auto shadow-md sm:rounded-lg mt-20">
        <table class="w-full text-sm text-left rtl:text-right border-collapse">
            <thead class="text-xs text-gray-700">
                <tr>
                    <th scope="col" class="px-6 py-3 border-b border-r p-2">
                      Code
                    </th>
                    <th scope="col" class="px-6 py-3 border-b border-r p-2">
                      Result
                    </th>
                    <th scope="col" class="px-6 py-3 border-b border-r p-2">
                      Format
                    </th>
                    <th scope="col" class="px-6 py-3 border-b border-r p-2">
                      Comment
                    </th>
                </tr>
            </thead>
            <tbody>
              <% @results.each do |result| %>
                <tr class="bg-white">
                  <td class="px-6 py-4 font-medium whitespace-nowrap border-b border-r p-2">
                    <%= result["code"] %>
                  </td>
                  <td class="px-6 py-4 border-b border-r p-2">
                    <%= result["value"] %>
                  </td>
                  <td class="px-6 py-4 border-b border-r p-2">
                    <%= result["format"] %>
                  </td>
                  <td class="px-6 py-4 border-b border-r p-2">
                    <%= result["comments"]&.join(', ') %>
                  </td>
                </tr>
              <% end %>
            </tbody>
        </table>
      </div>
      <%= link_to 'Upload Another File', root_path, class: "w-[40rem] h-10 text-black text-xl font-medium font-['Inter'] leading-normal mt-32" %>
    </div>
  </div>
<% end %>
<%= render 'results' %> 

